<h1>Register</h1>
<% if(errorMessage){%>
    <div class="alert alert-danger" role="alert">
      <ul>
      
     <% errorMessage.forEach((error)=>{ %>
       <li><%= error.msg %></li>
      <%})%>
          
    </ul>
    </div>
<% } %>
<form action="/recruiter-register" method="post" class="p-5">
    <div class="form-group" style="margin: 10px;">
      <label for="name">Name</label>
      <input
        name="name"
        type="text"
        class="form-control"
        id="name"
        placeholder="Enter Name"
      />
    </div>
    <div class="form-group" style="margin: 10px;">
        <label for="email">Email</label>
        <input
          name="email"
          class="form-control"
          id="email"
          placeholder="Enter email"
        />
    </div>
    <div class="form-group" style="margin: 10px;">
        <label for="company">Enter current company</label>
        <input
          name="company"
          type="text"
          class="form-control"
          id="company"
          placeholder="Enter comapany name"
        />
    </div>
      
    <div class="form-group" style="margin: 10px;">
        <label for="price">Enter password</label>
        <input
          name="password"
          type="password"
          class="form-control"
          id="password"
          placeholder="Enter password"
        />
    </div>
    <button class="btn btn-primary mt-2">Submit</button>
  </form>