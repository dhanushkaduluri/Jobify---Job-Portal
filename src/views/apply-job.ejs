<h1>Register</h1>
<form action="/apply" method="post" class="p-5" enctype="multipart/form-data">
    <div class="form-group" style="margin: 10px;">
      <label for="name">Name</label>
      <input
        name="name"
        type="text"
        class="form-control"
        id="name"
        placeholder="Enter Name"
        required
      />
    </div>
    <div class="form-group" style="margin: 10px;">
        <label for="email">Email</label>
        <input
          name="email"
          class="form-control"
          id="email"
          placeholder="Enter email"
          required
        />
    </div>
    <div class="form-group" style="margin: 10px;">
        <label for="resume">Resume*</label>
        <input
          type="file"
          name="resume"
          class="form-control"
          id="resume"
          accept=".pdf"
          required
        />
    </div>
    <div class="form-group" style="margin: 10px;">
        <label for="id">Job ID</label>
        <input
          name="id"
          class="form-control"
          id="id"
            value="<%= id %>"
            readonly
        />
    </div>
    <button class="btn btn-primary mt-2">Submit</button>
  </form>